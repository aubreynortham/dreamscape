<div class="wrapper">

  <h1>Sign up</h1>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <p><%= f.label :email %></p>
    <%= f.email_field :email, autofocus: true, :class => "small_entry" %>
  </div>

  <div class="field">
    <p><%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %></p>
    <%= f.password_field :password, autocomplete: "off", :class => "small_entry" %>
  </div>

  <div class="field">
    <p><%= f.label :password_confirmation %></p>
    <%= f.password_field :password_confirmation, autocomplete: "off", :class => "small_entry" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", :class => "submit" %>
  </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
